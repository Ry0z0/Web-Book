        <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Quản lí <b>tài khoản</b></h2>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người dùng</th>
                            <th>Cấp phép</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <c:forEach items="${listP}" var="o">
                            <tr>
                                <td>${o.id}</td>
                                <td>${o.user}</td>
                                <td>${o.isSell == 1 ? "Cho phép" : "Không cho phép"}</td>
                                <td>
                                    <a href="account?uid=${o.id}&toggle=${o.isSell}" class="delete" data-toggle="modal"><i class="fa-solid fa-handshake" data-toggle="tooltip" title="${o.isSell == 1 ? "Huy cap phép" : "Cho phép"}"></i></a>
                                </td>
                            </tr>
                        </c:forEach>
                    </tbody>
                </table>
